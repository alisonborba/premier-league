{
  "include": ["./src"],
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "target": "es2016",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true
  }
}
